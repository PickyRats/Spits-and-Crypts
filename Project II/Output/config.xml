<config>
	<app>
		<title>Project II</title>
		<initialMaxFrameDuration value="16"/>
		<capMaxFrameDuration value="32"/>
	</app>

	<renderer>
		<vsync value="true"/>
	</renderer>

	<window>
		<resolution width="1280" height="720" scale="1"/>
		<fullscreen value="false"/>
		<borderless value="false"/>
		<resizable value="false"/>
		<fullscreen_window value="false"/>
	</window>

	<audio>
		<music volume="128"/>
		<fx volume="200"/>
	</audio>

	<sceneVillage>
		<!-- Scene -->
		<map path="Assets/Maps/" name="Map_Village.tmx"/>

		<!-- Music -->
		<music>
		</music>

		<!-- Player -->
		<player x="50" y="50" texturepath="Assets/Textures/player.png" speed="0.2f"/>

		<dialogTrigger x="90" y="672" texturepath="Assets/Textures/player2.png"  facetexturepath="Assets/Textures/player2_face.png" name="El gracioso" repeat="true">
			<sentences>
				<sentence text="Sabes que se pregunta las cerezas cuando se miran en espejos? -Cere eza? [C REPITE] Sabes que se pregunta las cerezas cuando se miran en espejos? -Cere eza? [C REPITE] Sabes que se pregunta las cerezas cuando se miran en espejos? -Cere eza? [C REPITE] Sabes que se pregunta las cerezas cuando se miran en espejos? -Cere eza? [C REPITE] Sabes que se pregunta las cerezas cuando se miran en espejos? -Cere eza?"/>
				<sentence text="Sabes como se llama el hermano limpio de bruce willis? -Kevin Willis"/>
			</sentences>
			<repeat_sentences>
				<sentence text="Se me ha acabado el repertorio de chistes, vuelve en otro momento..."/>
			</repeat_sentences>
		</dialogTrigger>
	</sceneVillage>
	
	<!-- Intro -->
	<sceneintro>
